<%= link_to "Logout", url_for(logout_path)%>
<img src=<%=@user_details['picture']%>><%= @user_details['name'] %>
<br>
<%= form_tag(url_for(twits_path), :method => "post") do %>
  <%= text_area_tag(:twit) %>
  <%= submit_tag("Twit") %>
<% end %>
<br>
<% @twits.each do |twit| %>
	<img src=<%=twit.user.google_pic%>>
	<%=mail_to twit.user.google_email, twit.user.google_name%>:
	<%= twit.status %>
	<br>
	<br>
<% end %>